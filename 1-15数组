
/*
将字符串中的小写字母转换为对应的大写字母，其它字符不变。
*/

#include <stdio.h>
#include<string.h>
int main()
{
  void change();
  char str[40];
  int i;
  printf("输入字符串:");
  gets(str);
  for(i=0;str[i]!='\0';i++)
  {
	  if(str[i]>='a' && str[i]<='z') 
	  {
		  str[i]=str[i]-32;
	  }
  }
  printf("转换后结果:");
  puts(str);
  return 0;
}
